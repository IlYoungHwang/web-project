
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
		
		<title>로그인</title>
        
		<link href="../public/main.css" rel="stylesheet" >
		<script src="../public/jquery-3.1.1.min.js"></script>
		<script src="../public/semantic.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../public/semantic/semantic.min.css">
        <script src="../public/menu.js"></script>
        
        
		<script>
			$(function() {
				$('.ui.checkbox').checkbox();
			});
		</script>

	</head>
	<body>

        <div class="ui top fixed menu">
    <div class="item">
        <img src="../public/image/logo.png">
    </div>    
    
    <a href="/main" class="active item">메인</a>
    <a href="/ditelist" class="item">식단표</a>
    <a href="/noticelist" class="item">공지사항</a>
    <a href="/tendlist" class="item">건의게시판</a>
    <% if(login_success){ %>
    <div class="ui dropdown item">
        식재료관리
        <i class="dropdown icon"></i>
        <div class="menu">
            <a href="/food" class="item">식재료관리</a>
            <a href="/supplier" class="item">납품업체관리</a>
            <a href="/wakelist" class="item">잔반관리</a>
        </div>
    </div>
    <div class="right menu">        
    <a href="/profile" class="item">회원정보수정</a>
    <a href="/logout" class="item">로그아웃</a>
    </div>
    <% } else { %>
    <div class="right menu">        
    <a href="/login" class="item">로그인</a>
    <a href="/signup" class="item">회원가입</a>
    </div>
    <% } %>
</div>
    
        
        
        
		<div class="container">
			
			<div id="cardbox" class="ui blue fluid card">
                
                <% if (message.length > 0) { %>
                    <div class="ui red message"><%= message %></div>
			    <% } %>
                
				<form id="form1" method="post" action="/login" >
                    <h2 class="ui header">로그인</h2>
					<table>
						<tr class="row">
							<td class="col1"><label id="contentsText">아이디</label></td>
							<td class="col2" colspan="2">
								<div class="ui input">
									<input class="inputbox" type="text" name="id" placeholder="아이디를 입력하세요"/>
								</div>
							</td>
							<td></td>
						</tr>
						<tr class="row">
							<td class="col1"><label id="contentsText">비밀번호</label></td>
							<td class="col2" colspan="2">
								<div class="ui input">
									<input class="inputbox" type="password" name="password" placeholder="비밀번호를 입력하세요"/>
								</div>
							</td>
							<td></td>
						</tr>
						<tr valign="baseline">
							<td></td>
							<td>
								<div class="ui toggle checkbox">
									<input type="checkbox" name="saveOption">
									<label>아이디 저장</label>
								</div>
							</td>
							<td id="buttonContainer" align="right"><input id="submitButton" class="ui primary button" type="submit" value="로그인" name="" /></td>
						</tr>
					</table>
					
				</form>
				<hr>
                
			</div>
		</div>
	</body>
</html>
