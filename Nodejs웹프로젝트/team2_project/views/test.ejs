<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    
    <link rel="stylesheet" type="text/css" href="../public/semantic/semantic.min.css">
    <script src="../public/jquery-3.1.1.min.js"></script>
    <script src="../public/semantic/semantic.min.js"></script>
    <script src="../public/menu.js"></script>
    <title>식재료 관리</title>
    <style>
        body{
            margin-top: 7em;
            background-image:url('../public/image/boxed-bg.png');
        }
    </style>
   
</head>
<body>
    
<div class="ui top fixed menu">
    <div class="item">
        <img src="../public/image/logo.png">
    </div>    
    <a href="/main" class="item">메인</a>
    <a href="/ditelist" class="item">식단표</a>
    <a href="/noticelist" class="item">공지사항</a>
    <a href="/tendlist" class="item">건의게시판</a>
    <div class="ui dropdown item">
        식재료관리
        <i class="dropdown icon"></i>
        <div class="menu">
            <a href="/food" class="active item">식재료관리</a>
            <a href="/supplier" class="item">납품업체관리</a>
            <a href="/wakelist" class="item">잔반관리</a>
        </div>
    </div>
    <div class="right menu">
    <a href="/profile" class="item">회원정보수정</a>
    <a href="/logout" class="item">로그아웃</a>
    </div>
</div>


    
    
    <%  
       
        for(var i = 0; i < rows.length; i++){
            var no = rows[i].번호;
            var curtitle = rows[i].제목;
            var curcontent = rows[i].내용;
            
    %>
    
    <table>
        <td><%= no %></td><td></td><td><%= curtitle  %></td><td><%= curcontent  %></td>
    </table>

    <% } %>

    
    
    <div class="tiny ui basic buttons">
					 		<%
					 			if (context.page > 0) {
					 		%>
                                    <!-- 맨처음으로 -->
					 				<div class="ui icon button" onclick="listPage?=(0, <%= context.perPage %>)">
                                        <a href="listPage?page=0&perpagenum=<%= context.perPage %>">
										<i class="backward icon"></i>
                                        </a>
									</div>
                                    <!-- 한칸씩 왼쪽으로 -->
									<div class="ui icon button" onclick="listPage?=(<%=(context.page-1) %>, <%= context.perPage %>)">
                                        <a href="listPage?page=<%= (context.page-1) %>&perpagenum=<%= context.perPage %>">
										<i class="left chevron icon"></i>
                                        </a>
									</div>
					 		<%
					 			} else {
					 		%>
					 				<div class="ui disabled icon button">
										<i class="backward  icon"></i>
									</div>
									<div class="ui disabled icon button">
										<i class="left chevron icon"></i>
									</div>
					 		<%
					 			}
					 		%>
					 		<% 
		
					 			
					 			for (var i = context.startPage; i <= context.endPage; i++) {
					 				if (i != context.page) {
					 		%>
					 					<div class="ui button">
                                            <a href="listPage?page=<%= i %>&perpagenum=<%= context.perPage %>">
					 						<%= i %>
                                            </a>
					 					</div>
					 		<%
					 				} else {
					 		%>
					 					<div class="ui active basic button">
					 						<%= i %>,
					 					</div>
					 		<% 
					 				}
					 			}
					 		%>
					 		<%
					 			if ((context.page) < context.pageCount) {
					 		%>
                                    <!-- 한칸씩오른쪽 -->
					 				<div class="ui icon button" onclick="listPage?page=<%= context.page+1 %>&perpagenum=<%=context.perPage %>">
                                        <a href="listPage?page=<%= (context.page+1) %>&perpagenum=<%=context.perPage %>">
										<i class="right chevron icon"></i>
                                        </a>
									</div>
        
                                    <!-- 맨끝으로 -->
									<div class="ui icon button" onclick="listPage(<%=(context.pageCount-1) %>, <%=context.perPage %>)">
                                        <a href="listPage?page=<%= (context.pageCount) %>&perpagenum=<%=context.perPage %>">
										<i class="forward icon"></i>
                                        </a>
									</div>
					 		<%
					 			} else {
					 		%>
					 				<div class="ui disabled icon button">
										<i class="right chevron icon"></i>
									</div>
									<div class="ui disabled icon button">
										<i class="forward icon"></i>
									</div>
					 		<%
					 			}
					 		%>
					 	</div>
    
  
</body>
</html>